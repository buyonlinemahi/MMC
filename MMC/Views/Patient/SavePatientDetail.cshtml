@model MMCApp.Domain.ViewModels.PatientViewModel.PatientCurrentMedicalConditionViewModel
@using System.Web.Script.Serialization
@using MMCApp.Infrastructure.Global;

@{
    ViewBag.Title = "SavePatientDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/KnockoutViewModel/Patient/SavePatientDetailViewModel.js")"></script>  
    <script src="@Url.Content("~/Scripts/ko.pager.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.tmpl.js")"></script>
    <script type="text/javascript">
        var _PatientModel = @MvcHtmlString.Create(new JavaScriptSerializer().Serialize(Model));
        var _saveDetailViewModel = new SavePatientDetailViewModel(_PatientModel);
        ko.applyBindings(_saveDetailViewModel, $("#SaveUpdatePatientDiv").get(0));
    </script>

}
<div id="SaveUpdatePatientDiv">
    <!--ko if:PatientID()!= null-->
    @{Html.RenderPartial("~/Views/Shared/Patient/_PatientDetail.cshtml");}
    <!--/ko-->
    <br />
    <div class="col-sm-12 panel-bg">

        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#home">Patient</a></li>
            <li><a data-toggle="tab" href="#menu1">Claim</a></li>
            <li><a data-toggle="tab" href="#menu2">Occupational</a></li>
            <li><a data-toggle="tab" href="#menu3">Medical Records</a></li>
            <li><a data-toggle="tab" href="#menu3">UR History</a></li>
            <li><a data-toggle="tab" href="#menu3">Notes</a></li>
        </ul>
    @using (Html.BeginForm(GlobalConst.Actions.PatientController.SavePatientDetail, GlobalConst.Controllers.Patient, FormMethod.Post, new
    {
        id = "frmPatientSaveDetail",
        enctype = "multipart/form-data",
        data_bind = "ajaxForm : { success : function(responseText ,statusText,xhr,$form){AddPatientSuccess(responseText);}}"
    }))
    {
            <div class="tab-content">
                <div id="home" class="tab-pane fade in active">

                    <br />
                    <div class="row">
                        <div class="col-lg-12 client-accordian">
                            <div class="panel panel-default">
                                <div class="panel-heading" role="tab" id="heading11">
                                    <h4 class="panel-title">
                                        <a>
                                            Patient Demography
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapse11" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading11">
                                    <div class="panel-body row">
                                        <div class="col-sm-6">
                                            <div class="form-group row label-font clearfix">
                                                <label for="inputEmail3" class="col-sm-3 control-label">Patient First Name :</label>
                                                <div class="col-sm-9">
                                                    <input type="hidden" name="objPatientModel.PatientDetails.PatientID" id="PatientID" data-bind="value:PatientID" />
                                                    <input type="text" class="form-control" id="PatFirstName" name="objPatientModel.PatientDetails.PatFirstName" required="required" maxlength="25" data-bind="value:PatFirstName,jqBootstrapValidation: {}">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group row label-font clearfix">
                                                <label for="inputEmail3" class="col-sm-3 control-label">Patient Last Name :</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" id="PatLastName" name="objPatientModel.PatientDetails.PatLastName" required="required" maxlength="25" data-bind="value:PatLastName,jqBootstrapValidation: {}">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-sm-6">
                                            <div class="form-group row label-font clearfix">
                                                <label for="inputEmail3" class="col-sm-3 control-label">Patient SSN :</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control ssn" id="PatSSN" name="objPatientModel.PatientDetails.PatSSN" required="required" maxlength="11" data-bind="value:PatSSN,jqBootstrapValidation: {}">
                                                </div>
                                            </div>
                                        </div>


                                        <div class="col-sm-6">
                                            <div class="form-group row label-font clearfix">
                                                <label for="inputEmail3" class="col-sm-3 control-label">Patient DOB :</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" id="PatDOB" name="objPatientModel.PatientDetails.PatDOB" required="required" data-bind="value:PatDOB,jqBootstrapValidation: {}">
                                                </div>
                                            </div>
                                        </div>



                                        <div class="col-sm-6">
                                            <div class="form-group row label-font clearfix">
                                                <label for="inputEmail3" class="col-sm-3 control-label">Patient Age :</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" id="PatAge" name="objPatientModel.PatientDetails.PatAge" required="required" maxlength="3" data-bind="value:PatAge,jqBootstrapValidation: {}">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group row label-font clearfix">
                                                <label for="inputEmail3" class="col-sm-3 control-label">Patient Gender :</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="objPatientModel.PatientDetails.PatGender">
                                                        <option value="Male">Male</option>
                                                        <option value="Female">Female</option>
                                                        <option value="Other">Other</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group row label-font clearfix">
                                                <label for="inputEmail3" class="col-sm-3 control-label">Patient Address :</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" id="PatAddress1" name="objPatientModel.PatientDetails.PatAddress1" required="required" maxlength="50" data-bind="value:PatAddress1,jqBootstrapValidation: {}">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-sm-6">
                                            <div class="form-group row label-font clearfix">
                                                <label for="inputEmail3" class="col-sm-3 control-label">Patient Address 2 :</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" id="PatAddress2" name="objPatientModel.PatientDetails.PatAddress2" required="required" maxlength="50" data-bind="value:PatAddress2,jqBootstrapValidation: {}">
                                                </div>
                                            </div>
                                        </div>


                                        <div class="col-sm-6">
                                            <div class="form-group row label-font clearfix">
                                                <label for="inputEmail3" class="col-sm-3 control-label">Patient City :</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" id="PatCity" name="objPatientModel.PatientDetails.PatCity" required="required" maxlength="50" data-bind="value:PatCity,jqBootstrapValidation: {}">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group row label-font clearfix">
                                                <label for="inputEmail3" class="col-sm-3 control-label">Patient State :</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="objPatientModel.PatientDetails.PatStateId" required data-bind="options: States, optionsText: 'StateName', optionsValue: 'StateId', value: selectedItemState,jqBootstrapValidation:{}"></select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group row label-font clearfix">
                                                <label for="inputEmail3" class="col-sm-3 control-label">Patient Zip :</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control zipMaskformat" id="PatZip" name="objPatientModel.PatientDetails.PatZip" required="required" maxlength="10" data-bind="value:PatZip,jqBootstrapValidation: {}">
                                                </div>
                                            </div>
                                        </div>


                                        <div class="col-sm-6">
                                            <div class="form-group row label-font clearfix">
                                                <label for="inputEmail3" class="col-sm-3 control-label">Patient Phone :</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control phoneMaskformat" id="PatPhone" name="objPatientModel.PatientDetails.PatPhone" required="required" maxlength="14" data-bind="value:PatPhone,jqBootstrapValidation: {}">
                                                </div>
                                            </div>
                                        </div>


                                        <div class="col-sm-6">
                                            <div class="form-group row label-font clearfix">
                                                <label for="inputEmail3" class="col-sm-3 control-label">Patient Fax :</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control phoneMaskformat" id="PatFax" name="objPatientModel.PatientDetails.PatFax" required="required" maxlength="14" data-bind="value:PatFax,jqBootstrapValidation: {}">
                                                </div>
                                            </div>
                                        </div>


                                        <div class="col-sm-6">
                                            <div class="form-group row label-font clearfix">
                                                <label for="inputEmail3" class="col-sm-3 control-label">Patient E-mail :</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control email" id="PatEMail" name="objPatientModel.PatientDetails.PatEMail" required="required" maxlength="50" data-bind="value:PatEMail,jqBootstrapValidation: {}">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-sm-6">
                                            <div class="form-group row label-font clearfix">
                                                <label for="inputEmail3" class="col-sm-3 control-label">Ethinic Background :</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" id="PatEthnicBackground" name="objPatientModel.PatientDetails.PatEthnicBackground" required="required" maxlength="50" data-bind="value:PatEthnicBackground,jqBootstrapValidation: {}">
                                                </div>
                                            </div>
                                        </div>


                                        <div class="col-sm-6">
                                            <div class="form-group row label-font clearfix">
                                                <label for="inputEmail3" class="col-sm-3 control-label">Primary Language :</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="objPatientModel.PatientDetails.PatPrimaryLanguageId" required data-bind="options: PatPrimaryLanguages, optionsText: 'LanguageName', optionsValue: 'LanguageID', value: selectedItem,jqBootstrapValidation:{}"></select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-sm-6">
                                            <div class="form-group row label-font clearfix">
                                                <label for="inputEmail3" class="col-sm-3 control-label">Secondary Language :</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="objPatientModel.PatientDetails.PatSecondaryLanguageId" required data-bind="options: PatSecondaryLanguages, optionsText: 'LanguageName', optionsValue: 'LanguageID', value: selectedItemSeconday,jqBootstrapValidation:{}"></select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-sm-6">
                                            <div class="form-group row label-font clearfix">
                                                <label for="inputEmail3" class="col-sm-3 control-label">Marital Status :</label>
                                                <div class="col-sm-9">
                                                    <select class="form-control" name="objPatientModel.PatientDetails.PatMaritalStatus">
                                                        <option value="Married">Married</option>
                                                        <option value="Unmarried">Unmarried</option>
                                                        <option value="Widowed">Widowed</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="col-sm-6">
                                            <div class="form-group row label-font clearfix">
                                                <label for="inputEmail3" class="col-sm-3 control-label">Medicare Eligible :</label>
                                                <div class="col-sm-9">
                                                    <input type="text" class="form-control" id="PatMedicareEligible" name="objPatientModel.PatientDetails.PatMedicareEligible" required="required" maxlength="50" data-bind="value:PatMedicareEligible,jqBootstrapValidation: {}">
                                                </div>
                                            </div>
                                        </div>



                                        <div class="clearfix"></div>


                                    </div>
                                </div>
                            </div>


                        </div><!-- col-lg-12 -->
                    </div>
                    @{Html.RenderPartial("~/Views/Shared/Patient/_CurrentMedicalConditions.cshtml");}
                    
                </div>

            </div>
            <div class="row">
                <div class="col-sm-6">
                    <button class="btn btn-default padding-btn color-black pull-right margin-left-20 margin-btm-30" type="submit">Save</button>
                </div>
            </div>
    }
       
    </div>
</div>

  