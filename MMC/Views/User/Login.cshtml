<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>MMC</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    @System.Web.Optimization.Styles.Render("~/Content/css")
    @System.Web.Optimization.Scripts.Render("~/bundles/jquery")
    <script>
        $(document).ready(function () {
            $("#txtUserName").focus();
        });
    </script>    
</head>
<body style="background: url(/Content/img/home-background.jpg) no-repeat center center fixed; background-size: 100% 100%; margin: 0 auto; width: 100%; height: 100%; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover;">
    <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
@using (Html.BeginForm(GlobalConst.Actions.UserController.Login, GlobalConst.Controllers.User, FormMethod.Post, new
    {
        id = "frmSavePhysicianDetails",
        enctype = "multipart/form-data",
        data_bind = "ajaxForm:{ success: function(responseText, statusText, xhr, $form){ AddPhysicianSuccess(responseText);},beforeSubmit: PhysicianFormBeforeSubmit}"
    }))
    {
    <div class="body-wrapper">
        <div class="login-wrapper">
            <img src="/Content/img/login-logo.png" alt="LMG" class="login-logo" />
        
         
            <div class="login-box">
                <h1>Login Now</h1>
                <p>Enter your username and password:</p>
                <div class="textbox-container">
                    <label>Username:</label>
                    <input type="text" id="txtUserName" placeholder="" required title="username" name="UserName"  class="textbox" />
                </div>
                <div class="textbox-container">
                    <label>Password:</label>
                    <input type="password" placeholder="" required title="username" name="UserPassword" class="textbox" />
                </div>
                <div class="clearfix">
                    <div class="checkbox-container">
                   
               

                  @* 
                   @*     <label>
                            <input type="checkbox" class="set">
                            Remember me
                        </label><br>
                        <label>
                            <input type="checkbox">
                            Forget Password
                        </label>*@
                    </div>
                    <input type="submit" value="Login" class="login-btn"/>
                </div>



                <!-- clearfix -->
                <div class="clearfix padding-5">

               @*    <a href="#" class="link fright">Contact Us</a>*@
                </div>
                @if (Model.Message != null)
                {
                    <div class="alert-login alert-danger"><span>@Model.Message</span></div>
                }
                <!-- clearfix -->
            </div>
            <!-- login-box -->

            <div class="login-shadow">
                <img src="/Content/img/shadow.png" alt="LMG" class="login-shadow" /><!-- clearfix -->
            </div>
            <!-- login-box -->
           

        </div>
        <!-- login-wrapper -->
    </div>
  
    }    
</body>
</html>
