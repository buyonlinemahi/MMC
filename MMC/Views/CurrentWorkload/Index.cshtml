@using System.Web.Script.Serialization
@using MMCApp.Infrastructure.Global;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row" id="CurrentWorkloadDetailDiv">
    <div class="col-lg-12 client-accordian">
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="heading11">
                <h4 class="panel-title">
                    <a>
                        Current Workload Report
                    </a>
                </h4>
            </div>
            <div id="collapse11" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading11">
                <div class="panel-body row">
                    <div class="col-sm-6">
                        <div class="form-group row label-font clearfix">
                            <label for="inputEmail3" class="col-sm-3 control-label"><span class="required-link">*</span>Start Date :</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control datepicker" id="StartDate" name="StartDate" required="required">
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group row label-font clearfix">
                            <label for="inputEmail3" class="col-sm-3 control-label"><span class="required-link">*</span>End Date :</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control datepicker" id="EndDate" name="EndDate" required="required">
                            </div>
                        </div>
                    </div>
                    </div>
                <div class="panel-body row" style="margin-top: -12px;">
                    <div class="col-sm-6">
                        <div class="form-group row label-font clearfix">
                            <label for="inputEmail3" class="col-sm-3 control-label"><span class="required-link">*</span>Clients :</label>
                            <div class="col-sm-9">
                                <select class="form-control" multiple="multiple" id="objClientID" name="ClientID"
                                         required data-bind="options: Clients, optionsText: 'ClientName',optionsValue: 'ClientID', value: selectedclient"></select>
                                <input type="hidden" name="ClientID" data-bind="value: ClientID,jqBootstrapValidation: {}" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group row label-font clearfix">
                            <label for="inputEmail3" class="col-sm-3 control-label"><span class="required-link">*</span>Status :</label>
                            <div class="col-sm-9">
                                <select class="form-control" multiple="multiple" id="ddlStatusID" name="StatusID" required data-bind="options: Statuses, optionsText: 'StatusName',optionsValue: 'StatusID', value: selectedstatus"></select>
                                <input type="hidden" name="StatusID" data-bind="value: StatusID,jqBootstrapValidation: {}" />
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="col-sm-6"></div>
        <div class="col-sm-6">
            <button class="btn btn-default padding-btn color-black margin-btm-30" id="btnRunReport" data-bind='click: $root.GetReport' style="float:right">Run Report</button>
        </div>
    </div>
    <!-- col-lg-12 -->
</div>
<!-- row -->
@section scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/KnockoutViewModel/CurrentWorkload/CurrentWorkloadViewModel.js")"></script>
<script src="@Url.Content("~/Scripts/datepicker/bootstrap-datepicker.min.js")"></script>
<link href="~/Content/css/datepicker.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-1.11.4.js"></script>
    <script type="text/javascript">
        var currentworkloadModel = @MvcHtmlString.Create(new JavaScriptSerializer().Serialize(Model));
        var _CurrentWorkDetailResult = new CurrentWorkloadViewModel(currentworkloadModel);
        ko.applyBindings(_CurrentWorkDetailResult, $("#CurrentWorkloadDetailDiv").get(0));
    </script>
    <link href="~/Content/css/bootstrap-multiselect.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-multiselects.js"></script>   
}

