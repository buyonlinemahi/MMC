@using MMCApp.Infrastructure.Global;
@using System.Web.Script.Serialization;
@using (Html.BeginForm(GlobalConst.Actions.ADRController.SaveADRDetail, GlobalConst.Controllers.ADR, System.Web.Mvc.FormMethod.Post, new
{
    id = "frmVendorPartial",
    enctype = "multipart/form-data",
    data_bind = "ajaxForm : { success : function(responseText ,statusText,xhr,$form){AddADRSuccess(responseText);},beforeSubmit : ADRInfoFormBeforeSubmit}"
}))
{
    <div class="row">
        <div class="col-lg-12 client-accordian">
            <div class="panel panel-default">
                <div class="panel-heading" role="tab" id="heading11">
                    <h4 class="panel-title">
                        <a>
                            ADR Demography
                        </a>
                    </h4>
                </div>
                <div id="collapse11" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading11">
                    <div class="panel-body row">
                        <div class="col-sm-6">
                            <div class="form-group row label-font clearfix">
                                <label for="inputEmail3" class="col-sm-3 control-label"><span class="required-link">*</span>Name :</label>
                                <div class="col-sm-9">
                                    <input type="hidden" class="form-control" name="ADRID" id="ADRID" data-bind="value:ADRID">
                                    <input type="text" class="form-control" name="ADRName" id="ADRName" required="required" maxlength="50" data-bind="value:ADRName,jqBootstrapValidation: {}">
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-sm-6">
                            <div class="form-group row label-font clearfix">
                                <label for="inputEmail3" class="col-sm-3 control-label"><span class="required-link">*</span>Address :</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="ADRAddress" id="ADRAddress1" required="required" maxlength="50" data-bind="value:ADRAddress,jqBootstrapValidation: {}">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group row label-font clearfix">
                                <label for="inputEmail3" class="col-sm-3 control-label">Address 2 :</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="ADRAddress2" id="ADRAddress2" maxlength="50" data-bind="value:ADRAddress2,jqBootstrapValidation: {}">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group row label-font clearfix">
                                <label for="inputEmail3" class="col-sm-3 control-label"><span class="required-link">*</span>City :</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" maxlength="50" name="ADRCity" id="ADRCity" required="required" data-bind="value:ADRCity,jqBootstrapValidation: {}">
                                </div>
                            </div>
                        </div>


                        <div class="col-sm-6">
                            <div class="form-group row label-font clearfix">
                                <label for="inputEmail3" class="col-sm-3 control-label"><span class="required-link">*</span>Zip :</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control zipMaskformat" name="ADRZip" id="ADRZip" required="required" data-bind="value:ADRZip,jqBootstrapValidation: {}">
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group row label-font clearfix">
                                <label for="inputEmail3" class="col-sm-3 control-label"><span class="required-link">*</span>State :</label>
                                <div class="col-sm-9">
                                    <select class="form-control" name="ADRStateId" data-bind="options: States, optionsText: 'StateName', optionsValue: 'StateId', value: selectedItem,jqBootstrapValidation:{}"></select>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group row label-font clearfix">
                                <label for="inputEmail3" class="col-sm-3 control-label"><span class="required-link">*</span>Contact Name :</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="ContactName" id="ContactName" maxlength="50"  required="required" data-bind="value:ContactName,jqBootstrapValidation: {}">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group row label-font clearfix">
                                <label for="inputEmail3" class="col-sm-3 control-label"><span class="required-link">*</span>Contact Phone :</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control phoneMaskformat" name="ContactPhone" id="ContactPhone" required="required" data-bind="value:ContactPhone,jqBootstrapValidation: {}">
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div><!-- col-lg-12 -->
    </div><!-- row -->
    <div class="row">
        <div class="col-sm-12">
            @*<button class="btn btn-default padding-btn color-black pull-right margin-left-20 margin-btm-30" type="button">Cancel</button>*@
            <button class="btn btn-red padding-btn color-black pull-right margin-left-20 margin-btm-30" type="submit">Save</button>
        </div>
    </div>
}

