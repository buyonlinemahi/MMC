@using MMCApp.Infrastructure.Global;
@using System.Web.Script.Serialization;
@using (Html.BeginForm(GlobalConst.Actions.EmployerController.SaveEmployerSubsidiaryDetail, GlobalConst.Controllers.Employer, FormMethod.Post, new
{
    id = "frmSaveEmployerSubsidiariesDetails",
    enctype = "multipart/form-data",
    data_bind = "ajaxForm : { success : function(responseText ,statusText,xhr,$form){AddEmployerSubsidiarySuccess(responseText);},beforeSubmit : EmployerSubsidiaryFormBeforeSubmit}"
}))
{
<div id="collapse11" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading11">
    <div class="panel-body row">
        <div class="col-sm-6">
            <div class="form-group row label-font clearfix">
                <label for="EmpName" class="col-sm-3 control-label"><span class="required-link">*</span>Name :</label>
                <div class="col-sm-9">
                    <input type="hidden" name="EmployerId" id="EmployerId" data-bind="value:EmployerID" />
                    <input type="text" class="form-control" id="EMPSubsidiaryName" required="required" name="EMPSubsidiaryName" maxlength="50" data-bind="jqBootstrapValidation: {}">
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="form-group row label-font clearfix">
                <label for="EmpContactName" class="col-sm-3 control-label"><span class="required-link">*</span>Address :</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="EMPSubsidiaryAddress" required="required" maxlength="20" name="EMPSubsidiaryAddress" data-bind="jqBootstrapValidation: {}">
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group row label-font clearfix">
                <label for="EmpContactName" class="col-sm-3 control-label">Address2 :</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="EMPSubsidiaryAddress2"  maxlength="20" name="EMPSubsidiaryAddress2" data-bind="jqBootstrapValidation: {}">
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group row label-font clearfix">
                <label for="EmpPhoneExtension" class="col-sm-3 control-label"><span class="required-link">*</span>City :</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control " id="EMPSubsidiaryCity" required="required" maxlength="20" name="EMPSubsidiaryCity" data-bind="jqBootstrapValidation: {}">
                </div>
            </div>
        </div>
        
        <div class="col-sm-6">
            <div class="form-group row label-font clearfix">
                <label for="EmpStateId" class="col-sm-3 control-label"><span class="required-link">*</span>State :</label>
                <div class="col-sm-9">
                    <select id="EMPSubsidiaryStateId" class="form-control" name="EMPSubsidiaryStateId" data-bind="options: EmployerSubsidiarStates, optionsText: 'StateName', optionsValue: 'StateId', value: EmployerSubsidiarselectedItem,jqBootstrapValidation:{}"></select>
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="form-group row label-font clearfix">
                <label for="EmpZip" class="col-sm-3 control-label"><span class="required-link">*</span>Zip :</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control zipMaskformat" id="EMPSubsidiaryZip" required="required" maxlength="10" name="EMPSubsidiaryZip" data-bind="jqBootstrapValidation: {}">
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="form-group row label-font clearfix">
                <label for="EmpPhone" class="col-sm-3 control-label">Phone :</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control phoneMaskformat" id="EMPSubsidiaryPhone"  maxlength="14" name="EMPSubsidiaryPhone" data-bind="jqBootstrapValidation: {}">
                </div>
            </div>
        </div>


        <div class="col-sm-6">
            <div class="form-group row label-font clearfix">
                <label for="EmpFax" class="col-sm-3 control-label">Fax :</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control phoneMaskformat" id="EMPSubsidiaryFax"  maxlength="14" name="EMPSubsidiaryFax" data-bind="jqBootstrapValidation: {}">
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="form-group row label-font clearfix">
                <label for="EmpEMail" class="col-sm-3 control-label">E-mail :</label>
                <div class="col-sm-9">
                    <input type="email" class="form-control" id="EMPSubsidiaryEmail"  maxlength="50" name="EMPSubsidiaryEmail" data-bind="jqBootstrapValidation: {}">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <button class="btn btn-red padding-btn color-black pull-right margin-left-20 margin-btm-30" type="submit">Save</button>
            </div>
        </div>
    </div>
</div>
}
